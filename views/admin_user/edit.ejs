<% include ../partials/header %>

    <div class="ui huge header">
        Create A New User:
    </div>
    <form id="newProdForm" class="ui form" action="/admin/users/<%= user._id %>?_method=PUT" method="POST">
        <h3 class="ui dividing header">Edit User Form</h3>
        <div class="three fields">
            <div class="two wide field">
                <label>Select Rights:</label>
                <select class="ui fluid dropdown" name="user[role]">
                    <option value="<%= user.role %>"><%= user.role %></option>
                    <option value="readUser">Read-Only</option>
                    <option value="addUser">Add Rights</option>
                    <option value="editUser">Edit Rights</option>
                    <option value="adminUser">Admin Rights</option>
                </select>
            </div>
            <div class="field">
                <label>Email Address:</label>
                <input type="email" name="user[username]" value="<%= user.username %>" required>
            </div>
            <div class="field">
                <label>Full Name:</label>
                <input type="text" name="user[display]" value="<%= user.display %>" required>
            </div>
        </div>
        <button class="ui blue inverted button">Submit</button>
        <a class="ui red inverted button" href="/admin/users">Cancel</a>
    </form>
  
<% include ../partials/footer %>