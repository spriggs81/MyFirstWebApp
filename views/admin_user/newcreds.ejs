<% include ../partials/header %>

    
    <a class="ui purple inverted button" href="/admin"><i class="ui arrow left icon"></i> Go Back</a>
    <% if(creds == 'user'){ %>
        <div class="ui huge header">
            <strong><u>Employee Code for a Normal User</u></strong>
        </div>
        <form id="newProdForm" class="ui form" action="/admin/users/profile/<%= credprofile._id %>/user?_method=PUT" method="POST">
            <div class="ui grid">
                <div class="sixteen wide column">
                    <label class="ui header">Current User Profile Code:</label>
                </div>
            <% if(currentUser.username != "admin_user"){ %>    
                <div class="eight wide column">
                    <h1><input class="" name='olduser' value="<%= credprofile.user %>" disabled></input></h1>
                </div>
            </div>
            <div class='ui grid'>
                <div class="sixteen wide column">
                    <label>Enter New User Profile Code:</label>
                </div>
                <div class="eight wide column">
                    <input type="number" name="user" class="ui form"></input>
                </div>
                <div class"eight wide column">
                    <div class="credButtons">
                        <button class="ui left blue inverted button">Update</button>
            <% } else { %>
                <h1>As a General Admin User, You're Not Allowed View This Area</h1>
            <% } %>
                    </div>
                </div>
            </div>
        </form>
    <% }else if(creds == 'admin'){ %>
        <div class="ui huge header">
            <strong><u>Employee Code for an Admin User</u></strong>
        </div>
        <form id="newProdForm" class="ui form" action="/admin/users/profile/<%= credprofile._id %>/admin?_method=PUT" method="POST">
            <div class="ui grid">
                <div class="sixteen wide column">
                    <label class="ui header">Current Admin Profile Code:</label>
                </div>
            <% if(currentUser.username != "admin_user"){ %>    
                <div class="eight wide column">
                    <h1><input value="<%= credprofile.admin %>" disabled></input></h1>
                </div>
            </div>
            <div class='ui grid'>
                <div class="sixteen wide column">
                    <label>Enter New Admin Profile Code:</label>
                </div>
                <div class="eight wide column">
                    <input type="number" name="admin" class="ui form"></input>
                </div>
                <div class"eight wide column">
                    <div class="credButtons">
                            <button class="ui left blue inverted button">Update</button>
            <% } else { %>
                <h1>As a General Admin User, You're Not Allowed View This Area</h1>
            <% } %>
                    </div>
                </div>
            </div>
        </form>
    <% }else{ %>
        <h1>Not Sure How You Got Here, But You Should Go Back<h1>
    <% } %>
  
<% include ../partials/footer %>