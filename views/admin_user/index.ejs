<% include ../partials/header %>

    <a class="ui purple inverted button" href="/admin"><i class="ui arrow left icon"></i> Go Back</a>
    <div class="ui aligned huge header">
        Users Index Page:
    </div>
    <hr>
    <div class="ui label">
        Current Users:
    </div>
    <br>
    <% if(currentUser.username != "admin_user"){ %>
    <table class="ui celled table">
            <thead>
                <tr>
                    <th>Username:</th>
                    <th>First Name:</th>
                    <th>Last Name:</th>
                    <th>Is Admin</th>
                    <th class="bye">Options:</th>
                </tr>
            </thead>
            <tbody>
            <% users.forEach(function(user){ %>
                <tr>
                    <td><%=  user.username %></td>
                    <td><%=  user.firstname %></td>
                    <td><%=  user.lastname %></td>
                    <td>
                        <% if( user.admin === true){%>Yes<% }else{ %>No<% } %>
                    </td>
                    <td class="bye">
                        <div class="ui grid">
                            <div class="eight wide">
                                <div class="ui blue inverted button disabled">Edit <%=  user.username %></div>
                            </div>
                            <div class="eight wide">
                                <form  class="ui form" action="/admin/users/<%=  user._id %>?_method=DELETE" method="POST">
                                    <button class="ui red inverted button disabled">Delete <%=  user.username %></button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            </thead>
            <tbody>
            <% }); %>
        </tbody>
    </table>
    <% } else { %>
        <h1>As a General Admin User, You're Not Allowed to View This Area</h1>
    <% } %>

<% include ../partials/footer %>