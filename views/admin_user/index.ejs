<% include ../partials/header %>

    <a class="ui purple inverted button" href="/admin"><i class="ui arrow left icon"></i> Go Back</a>
    <div class="ui aligned huge header">
        Users Index Page:
    </div>
    <hr>
    <div class="ui label">
        Current Users:
    </div>
    <%= currentUser %>
    <br>
    <table class="ui celled table">
            <thead>
                <tr>
                    <th>Username:</th>
                    <th>First Name:</th>
                    <th>Last Name:</th>
                    <th>Is Admin</th>
                    <th>Options:</th>
                </tr>
            </thead>
            <tbody>
            <% users.forEach(function(user){ %>
                <tr>
                    <td><%=  user.username %></td>
                    <td><%=  user.firstname %></td>
                    <td><%=  user.lastname %></td>
                    <td>
                        <% if( user.admin === true){%>
                            Yes
                        <% }else{ %>
                            No
                        <% }; %>
                    </td>
                    <td>
                        <div class="ui grid">
                            <div class="eight wide">
                                <div class="ui blue inverted button">Edit</div>
                            </div>
                            <div class="eight wide">
                                <form  class="ui form" action="/admin/users/<%=  user._id %>?_method=DELETE" method="POST">
                                    <button class="ui red inverted button">Delete</button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            </thead>
            <tbody>
            <% }); %>
        </tbody>
    </table>
    

<% include ../partials/footer %>