<% include ../partials/header %>
    <a class="ui purple inverted button" href="/knowledge/<%= message.product %>/<%= message.type %>/<%= message._id %>"><i class="ui arrow left icon"></i> Go Back</a>
    <div class="ui huge header">
        You are editing a message in <%= product.name %>'s Knowledge Base
    </div>
    <div class="ui header">
        Please edit your helpful information to the Knowledge Base:
    </div> 
    <form class="ui form" action="/knowledge/<%= product._id %>/info/<%= message._id %>/edit?_method=PUT" method="POST">
        <div class="ui grid">
            <div class="sixteen wide column">
                <label>Desccription:</label><br>
                <input type="text" name="desc" value="<%= message.desc %>" required>
            </div>
            <div class="sixteen wide column">
                <label>Helpful Information:</label><br>
                <textArea name="message" required><%= message.message %></textArea>
            </div>
        </div>
        <br>
        <button class="ui green inverted button">Update Info</button>

<% include ../partials/footer %>