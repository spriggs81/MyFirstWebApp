<% include ../partials/header %>
    <a class="ui purple inverted button" href="/knowledge"><i class="ui arrow left icon"></i> Go Back</a>
    <div class="ui huge header">
        You are adding a message to <%= product.name %>'s Knowledge Base
    </div>
    <div class="ui header">
        Please enter in your helpful information to the Knowledge Base:
    </div> 
    <form class="ui form" action="/knowledge/<%= product._id %>/info/new" method="POST">
        <div class="ui grid">
            <div class="sixteen wide column">
                <label>Desccription:</label><br>
                <input type="text" name="desc" placeholder="Desccription" required>
            </div>
            <div class="sixteen wide column">
                <label>Helpful Information:</label><br>
                <textArea name="message" required></textArea>
            </div>
        </div>
        <br>
        <button class="ui green inverted button">Submit Info</button>

<% include ../partials/footer %>